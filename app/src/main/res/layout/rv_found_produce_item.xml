<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp">
    <ImageView
        android:id="@+id/iv_found_fragment_produce"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@mipmap/huaji"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_found_fragment_produce_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:text="标题"
            android:textColor="@color/colorText"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_found_fragment_produce_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:maxLines="3"
            android:text="内容"/>
        <TextView
            android:id="@+id/tv_found_fragment_produce_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="价格"
            android:textColor="@color/colorCatchText"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>