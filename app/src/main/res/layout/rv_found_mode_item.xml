<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorItem"
    android:layout_marginTop="5dp">
    <ImageView
        android:id="@+id/iv_found_fragment_mode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:src="@mipmap/huaji"/>
    <TextView
        android:id="@+id/tv_found_fragment_mode_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="车名"
        android:textColor="@color/colorText"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_found_fragment_mode_detail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:maxLines="2"
        android:text="优惠力度"
        android:textSize="10sp"/>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_found_fragment_mode_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠价格"
            android:textColor="@color/colorCatchText"/>
        <TextView
            android:id="@+id/tv_found_fragment_mode_old_price"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价格"
            android:textSize="8sp"/>

    </LinearLayout>

</LinearLayout>