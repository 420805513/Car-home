<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_recommend_nc_user1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@mipmap/huaji"/>
        <TextView
            android:id="@+id/tv_recommend_nc_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user名称"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:background="@color/colorBackround1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/tv_recommend_nc_big_pic1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_recommend_nc_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很多的内容内容内容"
            android:textSize="15dp"
            android:textColor="@color/colorText"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

</LinearLayout>